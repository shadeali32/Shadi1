

void setup() {
  size(1000, 1000);
  clear();
  textSize(35);  
}

void draw() {
  frameRate(150);
  text("Når en tast Trykkes skiftes faver .opgaven er færdig",100,100);

  fill(random(0,260), random(0,260), random(0, 260),random(0, 260));


  if (keyPressed ==true) {
    fill(random(0, 255), random(0, 255), random(0, 255));
  }
}

void mouseDragged() 
{
  circle(mouseX, mouseY, random(23, 100));
}
